{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./",
        "declaration": false,
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "declarationDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "outDir": "./dist",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "dom"
        ],
        "paths": {
            "@themost/user-events": [
                "src/index"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}
